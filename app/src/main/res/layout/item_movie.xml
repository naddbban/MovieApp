<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/vintage4"
    android:layout_marginBottom="10px"
    android:padding="10px">

    <ImageView
        android:id="@+id/image_view_main"
        android:layout_width="140dp"
        android:layout_height="180dp"
        app:srcCompat="@mipmap/launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingTop="20px">

        <ImageView
            android:id="@+id/image_backdrop_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50px"
            android:layout_marginLeft="40px">

            <TextView
                android:id="@+id/movie_main_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10px" />

            <TextView
                android:id="@+id/description_main_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="20px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingbar_main"
                    style="@android:style/Widget.Material.Light.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/RatingBar"
                    android:layout_marginTop="22px"
                    android:numStars="5" />

                <TextView
                    android:id="@+id/rating_main_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="13sp"
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="20px"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rilis"
                    android:textStyle="bold"
                    android:layout_marginTop="20px" />

                <TextView
                    android:id="@+id/release_main_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="20px" />

            </LinearLayout>



        </LinearLayout>

    </RelativeLayout>



</LinearLayout>